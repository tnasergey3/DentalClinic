@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<WebApp.Classes.SharedResource> SharedLocalizer

@model WebApp.Models.CustomerMessages

@{
    ViewBag.Title = @SharedLocalizer["Contacts"];
    ViewBag.CurrentPage = "Contact";
}

<section class="section" style="padding: 1em 0;">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mb-5 element-animate">
                @using (Html.BeginForm())
                {
                    <div class="row">
                        <div class="col-md-12 form-group" style="text-align:center; text-transform:uppercase;">
                            <h5>
                                @SharedLocalizer["ContactUs"]
                            </h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label for="Surname">
                                Фамилия
                            </label>
                            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Surname)
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="Name">
                                @SharedLocalizer["Name"]
                                <span class="text-danger">*</span>
                            </label>
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Name)
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label for="Patronymic">
                                Отчество
                            </label>
                            @Html.TextBoxFor(m => m.Patronymic, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Patronymic)
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="Phone">
                                @SharedLocalizer["Phone"]
                                <span class="text-danger">*</span>
                            </label>
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Phone)
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label for="Email">Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label for="Message">
                                @SharedLocalizer["YourMessage"]
                                <span class="text-danger">*</span>
                            </label>
                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control", @style = "max-width: 540px; height: 155px;" })
                            @Html.ValidationMessageFor(m => m.Message)
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 form-group">
                            <span class="text-danger">*</span>
                            - поля обязательные для заполнения
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input type="submit" value=@SharedLocalizer["Send"] class="btn btn-primary btn-lg btn-block">
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-5 element-animate">

                <h5 class="text-uppercase mb-3">
                    @*@Resources.Resource.Address*@
                    @SharedLocalizer["Address"]
                </h5>
                <p class="mb-5">
                    @*г. Чернигов, ул. Шевчука, 14*@
                    @*@Resources.Resource.Address1*@
                    @SharedLocalizer["Address1"]
                </p>

                <h5 class="text-uppercase mb-3">
                    @*График работы*@
                    @*@Resources.Resource.Schedule*@
                    @SharedLocalizer["Schedule"]
                </h5>
                <p class="mb-5">
                    @*понедельник - субота с 09.00 до 20.00*@
                    @*@Resources.Resource.MondaySaturdayFrom*@
                    @SharedLocalizer["MondaySaturdayFrom"]
                    <br>
                    @*перерыв с 14.00 до 16.00*@
                    @*@Resources.Resource.BreakFrom*@
                    @SharedLocalizer["BreakFrom"]
                    <br>
                    @*воскресенье - выходной*@
                    @*@Resources.Resource.SundayIsADayOff*@
                    @SharedLocalizer["SundayIsADayOff"]
                </p>

                <h5 class="text-uppercase mb-3">
                    @*@Resources.Resource.EmailUsAt*@
                    @SharedLocalizer["EmailUsAt"]
                </h5>
                <p class="mb-5"><a href="mailto:info@yourdomain.com">info@yourdomain.com</a></p>

                <h5 class="text-uppercase mb-3">
                    @*@Resources.Resource.CallUs*@
                    @SharedLocalizer["CallUs"]
                </h5>
                <p class="mb-5"><span class="ion-android-call"></span> +38 (063) 877-27-16 <br><span class="ion-android-call"></span> +38 (063) 494-17-50</p>

            </div>
        </div>
    </div>
</section>


